package com.luv2code.annotation_constructor_injection;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;


@Component
public class LudoCoach implements ICoach {

	//@Autowired
	private ISocialService socialService;

	// if @Autowired removed we need to maintain <constauctor-arg> in xml tag
	
	@Autowired
	public LudoCoach(ISocialService theSocialService) {
		socialService = theSocialService;
	}

	public String getDailyWorkout() {
		return "Practice your backhand volley";
	}

	public String getDailyFortune() {
		return socialService.getService();
	}

}
