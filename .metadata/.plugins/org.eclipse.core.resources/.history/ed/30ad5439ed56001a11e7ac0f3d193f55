package com.luv2code.practiceActivity1_ioc_xml;

import org.springframework.context.support.ClassPathXmlApplicationContext;

/**
 * Hello world!
 *
 */
public class App {
	public static void main(String[] args) {
		ClassPathXmlApplicationContext context = new ClassPathXmlApplicationContext("applicationContext.xml");
		Play play1 = context.getBean("cricketBean", Play.class);
		Play play2 = context.getBean("footballBean", Play.class);
		System.out.println(play1.getTypeOfPlay());
		System.out.println(play2.getTypeOfPlay());
		context.close();
	}
}
